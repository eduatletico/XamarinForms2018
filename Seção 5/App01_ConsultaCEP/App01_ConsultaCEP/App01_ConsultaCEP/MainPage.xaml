<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App01_ConsultaCEP"
             x:Class="App01_ConsultaCEP.MainPage">

    <StackLayout BackgroundColor="#FFBF00"
                 Padding="30"
                 Spacing="30">
        
        <Image Source="LogoCorreios.png" />

        <Entry Placeholder="Digite o cep" 
               PlaceholderColor="#FFBF00" 
               BackgroundColor="#FFFFFF" 
               MaxLength="8"
               x:Name="CEP" />

        <Button Text="Buscar CEP" 
                TextColor="#FFFFFF" 
                BackgroundColor="#00416B"
                x:Name="Botao" 
                Clicked="BuscarCEP" />

        <Label Text="" 
               HorizontalOptions="Center" 
               VerticalOptions="CenterAndExpand"
               x:Name="Resultado" />
        
    </StackLayout>

</ContentPage>
